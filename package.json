{
  "name": "@chubbyts/chubbyts-framework-skeleton",
  "version": "1.0.0",
  "description": "A minimal skeleton for chubbyts-framework.",
  "keywords": [
    "chubbyts",
    "framework",
    "skleton"
  ],
  "author": "Dominik Zogg",
  "license": "MIT",
  "repository": "chubbyts/chubbyts-framework-skeleton",
  "scripts": {
    "build-watch": "node build-cli.js -w",
    "build": "node build-cli.js",
    "command": "npm run build && node dist/bin/console.js",
    "cs-fix": "prettier --write bin bootstrap config src tests *.js",
    "cs": "prettier --check bin bootstrap config src tests *.js",
    "infection": "stryker run",
    "lint-fix": "eslint bin bootstrap config src tests --fix",
    "lint": "eslint bin bootstrap config src tests",
    "start-debug": "concurrently \"npm run build-watch\" \"sleep 0.1 && npm run watch-server-debug\"",
    "start": "concurrently \"npm run build-watch\" \"sleep 0.1 && npm run watch-server\"",
    "test:integration": "jest --config jest.integration.config.js",
    "test": "jest",
    "watch-server-debug": "nodemon --watch \"dist/**/*\" --inspect=0.0.0.0:1235 dist/bootstrap/index.js",
    "watch-server": "nodemon --watch \"dist/**/*\" dist/bootstrap/index.js"
  },
  "jest": {
    "transform": {
      "\\.ts$": "@swc/jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@chubbyts/chubbyts-dic": "^1.0.2",
    "@chubbyts/chubbyts-dic-config": "^1.0.2",
    "@chubbyts/chubbyts-dic-types": "^1.0.0",
    "@chubbyts/chubbyts-framework": "^1.6.3",
    "@chubbyts/chubbyts-framework-router-path-to-regexp": "^1.2.0",
    "@chubbyts/chubbyts-http": "^1.0.1",
    "@chubbyts/chubbyts-http-types": "^1.0.0",
    "@chubbyts/chubbyts-log-types": "^1.0.0",
    "@chubbyts/chubbyts-node-http-bridge": "^1.0.0",
    "@chubbyts/chubbyts-pino-adapter": "^1.1.1",
    "commander": "^9.4.1",
    "pino": "^8.7.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^6.3.0",
    "@stryker-mutator/jest-runner": "^6.3.0",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.24",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.2.3",
    "@types/node": "^14.18.33",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "concurrently": "^7.6.0",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  }
}
