{
  "name": "@chubbyts/chubbyts-framework-skeleton",
  "version": "1.0.0",
  "description": "A minimal skeleton for chubbyts-framework.",
  "keywords": [
    "chubbyts",
    "framework",
    "skleton"
  ],
  "author": "Dominik Zogg",
  "license": "MIT",
  "repository": "chubbyts/chubbyts-framework-skeleton",
  "scripts": {
    "build-watch": "node build-cli.js -w",
    "build": "node build-cli.js",
    "command": "npm run build && node dist/bin/console.js",
    "cs-fix": "prettier --write bin bootstrap config src tests *.js",
    "cs": "prettier --check bin bootstrap config src tests *.js",
    "infection": "stryker run",
    "debug": "concurrently \"npm run build-watch\" \"sleep 0.1 && npm run watch-server-debug\"",
    "develop": "concurrently \"npm run build-watch\" \"sleep 0.1 && npm run watch-server\"",
    "lint-fix": "eslint bin bootstrap config src tests --fix",
    "lint": "eslint bin bootstrap config src tests",
    "start": "npm install && npm run lint-fix && npm run cs-fix && npm run develop",
    "test:integration": "jest --config jest.integration.config.js",
    "test": "jest",
    "watch-server-debug": "nodemon --inspect=0.0.0.0:1235",
    "watch-server": "nodemon"
  },
  "jest": {
    "transform": {
      "\\.ts$": "@swc/jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@chubbyts/chubbyts-dic": "^1.2.0",
    "@chubbyts/chubbyts-dic-config": "^1.2.0",
    "@chubbyts/chubbyts-dic-types": "^1.2.1",
    "@chubbyts/chubbyts-framework": "^1.9.0",
    "@chubbyts/chubbyts-framework-router-path-to-regexp": "^1.4.0",
    "@chubbyts/chubbyts-http": "^1.2.1",
    "@chubbyts/chubbyts-http-types": "^1.2.3",
    "@chubbyts/chubbyts-log-types": "^1.3.2",
    "@chubbyts/chubbyts-node-http-bridge": "^1.2.0",
    "@chubbyts/chubbyts-pino-adapter": "^1.3.1",
    "commander": "^11.0.0",
    "pino": "^8.14.2"
  },
  "devDependencies": {
    "@chubbyts/chubbyts-eslint": "^2.0.3",
    "@chubbyts/chubbyts-function-mock": "^1.4.1",
    "@stryker-mutator/core": "^7.1.1",
    "@stryker-mutator/jest-runner": "^7.1.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.71",
    "@swc/jest": "^0.2.27",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "concurrently": "^8.2.0",
    "cross-fetch": "^4.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  }
}
