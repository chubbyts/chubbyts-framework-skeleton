{
  "name": "@chubbyts/chubbyts-framework-skeleton",
  "version": "1.0.0",
  "description": "A minimal skeleton for chubbyts-framework.",
  "keywords": [
    "chubbyts",
    "framework",
    "skleton"
  ],
  "author": "Dominik Zogg",
  "license": "MIT",
  "repository": "chubbyts/chubbyts-framework-skeleton",
  "scripts": {
    "cs-fix": "prettier --write bin bootstrap config src tests",
    "cs": "prettier --check bin bootstrap config src tests",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "infection": "stryker run",
    "build": "rm -Rf dist && tsc",
    "start": "nodemon bootstrap/index.ts",
    "command": "ts-node bin/console.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@chubbyts/chubbyts-dic": "^1.0.2",
    "@chubbyts/chubbyts-dic-config": "^1.0.2",
    "@chubbyts/chubbyts-dic-types": "^1.0.0",
    "@chubbyts/chubbyts-framework": "^1.3.2",
    "@chubbyts/chubbyts-framework-router-path-to-regexp": "^1.0.3",
    "@chubbyts/chubbyts-http": "^1.0.1",
    "@chubbyts/chubbyts-http-types": "^1.0.0",
    "@chubbyts/chubbyts-log-types": "^1.0.0",
    "@chubbyts/chubbyts-node-http-bridge": "^1.0.0",
    "@chubbyts/chubbyts-pino-adapter": "^1.1.1",
    "commander": "^9.4.0",
    "pino": "^8.5.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^6.2.2",
    "@stryker-mutator/jest-runner": "^6.2.2",
    "@types/jest": "^29.0.3",
    "@types/node": "^14.18.29",
    "cross-fetch": "^3.1.5",
    "jest": "^29.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
